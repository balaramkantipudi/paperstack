# Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APP CONFIGURATION
# =============================================================================
VITE_APP_NAME=Paperstack
VITE_APP_URL=http://localhost:5173
NODE_ENV=development

# =============================================================================
# AUTHENTICATION (Clerk or Auth0)
# =============================================================================
# Get these from: https://clerk.com or https://auth0.com
VITE_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/paperstack

# =============================================================================
# DOCUMENT PROCESSING & OCR
# =============================================================================
# Google Cloud Vision API
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_API_KEY=xxxxx
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# OR AWS Textract
AWS_ACCESS_KEY_ID=xxxxx
AWS_SECRET_ACCESS_KEY=xxxxx
AWS_REGION=us-east-1

# =============================================================================
# FILE STORAGE
# =============================================================================
# AWS S3
AWS_S3_BUCKET_NAME=paperstack-documents-dev
AWS_S3_REGION=us-east-1

# OR Google Cloud Storage
GCS_BUCKET_NAME=paperstack-documents-dev
GCS_PROJECT_ID=your-project-id

# =============================================================================
# ACCOUNTING INTEGRATIONS
# =============================================================================
# QuickBooks Online API
# Get from: https://developer.intuit.com
QUICKBOOKS_CLIENT_ID=xxxxx
QUICKBOOKS_CLIENT_SECRET=xxxxx
QUICKBOOKS_REDIRECT_URI=http://localhost:5173/integrations/quickbooks/callback
QUICKBOOKS_ENVIRONMENT=sandbox

# Xero API
# Get from: https://developer.xero.com
XERO_CLIENT_ID=xxxxx
XERO_CLIENT_SECRET=xxxxx
XERO_REDIRECT_URI=http://localhost:5173/integrations/xero/callback

# =============================================================================
# EMAIL SERVICE
# =============================================================================
# SendGrid
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxx
SENDGRID_FROM_EMAIL=noreply@paperstack.com

# OR AWS SES
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@paperstack.com

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe
# Get from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# =============================================================================
# AI/ML SERVICES (Optional)
# =============================================================================
# OpenAI API for smart categorization and insights
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxx

# =============================================================================
# SECURITY
# =============================================================================
# Generate strong random strings for these
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data-32-chars

# =============================================================================
# MONITORING & LOGGING (Optional but Recommended)
# =============================================================================
# Sentry for error tracking
# Get from: https://sentry.io
SENTRY_DSN=https://xxxxx@o000000.ingest.sentry.io/0000000

# Logtail for log management
# Get from: https://logtail.com
LOGTAIL_SOURCE_TOKEN=xxxxx

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
VITE_ENABLE_AI_INSIGHTS=true
VITE_ENABLE_TAX_DEDUCTIONS=true
VITE_ENABLE_MULTI_CURRENCY=false

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true
